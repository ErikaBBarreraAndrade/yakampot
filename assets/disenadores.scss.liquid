/*========================== Diseñadores =======================*/
.disenadores{
  .site-header{
    background: #000 !important;
  }
  #page{
    padding-top: 56px !important;
    @media(min-width: 992px){
      padding-top: 80px !important;
    }
  }
  .box-simple-text{
    padding: 100px 0 40px;
    .content-text{
      .title{
        font-family: 'Raleway-Medium';
        font-size: 15px;
        line-height: 22px;
	      letter-spacing: 0.5px;
        text-transform: uppercase;
        margin: auto;
        width: 245px;
        @media(min-width: 576px){
          width: 430px;
        }
        @media(min-width: 992px){
          letter-spacing: 2px;
          font-size: 22px;
          line-height: 30px;
          text-align: center;
          width: 815px;
        }
      }
      .description{
        font-family: 'Circular Std Book';
        font-size: 13px;
        line-height: 18px;
        margin: auto;
        margin-top: 30px;
        width: 250px;
        letter-spacing: 0.5px;
        @media(min-width: 576px){
          width: 435px;
        }
        @media(min-width: 992px){
          text-align: center;
          font-size: 13px;
          line-height: 19px;
          width: 570px;
        }
        p{
          line-height: 18px;
          @media(min-width: 992px){
            line-height: 18px;
          }
        }
      }
      .content-button{
        text-align: left;
        margin: auto;
        margin-top: 50px;
        width: 250px;
        @media(min-width: 576px){
          width: 435px;
        }
        @media(min-width: 992px){
          text-align: center;
          width: auto;
        }
        a{
          font-family: 'Raleway-Light';
          font-size: 15px;
          line-height: 18px;
          text-decoration: none;
          text-transform: uppercase;
          @media(min-width: 992px){
            font-size: 13px;
            line-height: 15px;
          }
        }
      }
    }
  }
  .seccion-img-gallery{
    .content-image-gallery{
      .content-img{
        padding: 0;
      }
    }
  }
  .section-btn-txt{
    padding: 90px 0;
    .content-txt{
      .title{
        font-family: 'Raleway-Medium';
        font-size: 15px;
        line-height: 22px;
        margin: auto;
        color: #000;
        text-transform: uppercase;
	      letter-spacing: 1px;
        @media(min-width: 992px){
          letter-spacing: 3px;
          font-size: 22px;
          line-height: 30px;
          text-align: center;
        }
      }
      .description{
        font-family: 'Circular Std Book';
        font-size: 13px;
        line-height: 18px;
        margin: auto;
        letter-spacing: 0.5px;
        margin-top: 30px;
        @media(min-width: 992px){
          text-align: center;
          font-size: 13px;
          line-height: 19px;
          width: 570px;
        }
        p{
          color: #000;
          line-height: 18px;
          @media(min-width: 992px){
            line-height: 18px;
          }
        }
      }
      .content-button{
        margin-top: 30px;
        a{
          font-family: 'Raleway-Light';
          font-size: 15px;
          line-height: 18px;
          text-transform: uppercase;
          background: transparent !important;
          color: #000;
          border-bottom: none !important;
          padding: 0;
          border-radius: 0 !important;
          @media(min-width: 992px){
            font-size: 13px;
            line-height: 15px;
          }
          span{
            border-bottom: 1px solid #000;
          }
	        &:after{
		        content: none !important;
	        }
        }
      }
    }
  }
  .seccion-list-gallery{
    padding-bottom: 90px;
    .content-image-gallery{
      .content-list-image{
        list-style: none;
        display: flex;
        justify-content: center;
        margin: auto;
        @media(max-width: 991px){
          flex-wrap: wrap;
        }
        @media(min-width: 992px){
          width: 80%;
        }
        .content-img{
          img{
            object-fit: cover;
            @media(min-width: 992px){
              height: 400px;
            }
          }
          &.big_image{
            width: 100%;
            order: -1 !important;
            @media(max-width: 991px){
              flex: 0 0 auto;
            }
            @media(min-width: 992px){
              width: auto;
              order: 0 !important;
            }
          }
          &.small_image{
            width: 50%;
            @media(max-width: 991px){
              flex: 0 0 auto;
            }
            @media(min-width: 992px){
              width: auto;
            }
          }
        }
      }
    }
    .content-description{
      .description{
        font-family: 'Circular Std Book';
        font-size: 13px;
        line-height: 18px;
        letter-spacing: 0.5px;
        margin: auto;
        margin-top: 30px;
        @media(min-width: 992px){
          text-align: center;
          font-size: 13px;
          line-height: 19px;
          width: 570px;
        }
        p{
          color: #000;
          line-height: 18px;
          @media(min-width: 992px){
            line-height: 18px;
          }
        }
      }
    }
  }
}
/*========================== Diseñadores =======================*/