.template-blog{
  background: #FFFFFF;
	.header-sticky-wrapper{
    background: #000;
	}
	.blog-template-content-box{
    padding:80px 0 20px;
    @media (min-width: 992px) {
      padding: 140px 0 70px;
    }
    .grid-article-blog{
      padding: 0 30px;
      .article__grid-image{
        margin-bottom: 0 !important;
      }
      .content-image{
        img{
          width: 100%;
          object-fit: cover;
          object-position: center;
          @media (min-width: 576px) {
            height: 737px;
          }
        }
      }
      .content-title{
        margin-top: 15px;
        @media (min-width: 992px) {
          margin-top: 0;
        }
        a{
          font-family: "Raleway";
          color: #000;
          font-size: 18px;
          line-height: 22px;
          text-decoration: none;
          @media (min-width: 992px) {
            font-size: 20px;
            line-height: 50px;
          }
        }
      }
      .content-date{
        font-family: "Raleway-Medium";
        color: #A2A2A2;
        text-transform: uppercase;
        font-size: 12px;
        line-height: 14px;
        margin: 30px 0 40px;
        @media (min-width: 992px) {
          margin: 10px 0 70px;
        }
        a{
          font-family: "Raleway-Medium";
          color: #9A9A9A;
          font-size: 11px;
          line-height: 13px;
          padding: 2px !important;
          @media (min-width: 992px) {
            font-size: 12px;
            line-height: 14px;
          }
          span{
            border-bottom: 1px solid #9A9A9A;
          }
          &:hover{
            background: transparent !important;
          }
          &:after{
            content: none !important;
          }
        }
      }
    }
  }
}
.template-article{
  background: #FFFFFF;
  .header-wrapper {
    background: rgba(0,0,0,.5)!important;
    position: fixed;
    width: 100%;
  }
	.date-box{
    font-family: "Raleway-Medium";
    color: #B9B9B9;
    font-size: 11px;
    line-height: 13px;
    margin-top: 98px;
    @media (min-width: 992px) {
      font-size: 12px;
      line-height: 14px;
      margin-top: 90px;
    }
	}
	.title-article{
    font-family: "Raleway";
    color: #000;
    text-transform: uppercase;
		letter-spacing: 0.8px;
    font-size: 18px;
    line-height: 22px;
    margin-top: 13px;
    @media (min-width: 992px) {
      font-family: "Raleway-Medium";
      font-size: 20px;
      line-height: 50px;
      margin-top: 10px;
    }
  }
	.date-author{
    color: #B9B9B9;
    font-family: "Raleway-Medium";
    font-size: 11px;
    margin-top: 14px;
    line-height: 13px;
    @media (min-width: 992px) {
      font-size: 12px;
      line-height: 14px;
      margin-top: 10px;
    }
	}
	.content-image-mobile{
		p{
      margin: 0 !important;
      img{
        width: 100% !important;
      }
		}
	}
	.content-box-article-description{
		&.content-box-article-description-1{
      padding-top: 70px;
      @media (min-width: 992px) {
        padding-top: 125px;
      }
		}
		.content-image-first{
      padding-top: 106px;
      @media (min-width: 992px) {
        padding-top: 0px;
      }
		}
		.block-complete-text{
      font-family: "Circular Std Book";
      font-size: 12px;
      line-height: 21px;
      letter-spacing: 0.5px;
      color: #000;
      padding: 104px 0;
      @media (min-width: 992px) {
        font-size: 13px;
        line-height: 21px;
        padding: 115px 0;
      }
      @media (min-width: 1280px) {
        width: 908px;
      }
      @media (min-width: 1500px) {
        width: 1066px;
      }
			a{
        color: #000;
			}
		}
	}
  .block-image-second{
    padding-bottom: 104px;
    @media (min-width: 992px) {
      padding-bottom: 230px;
    }
  }
  .block-image-3{
    padding: 0px;
    padding-bottom: 104px;
    @media (min-width: 992px) {
      padding: 0px 15px;
      padding-bottom: 105px;
    }
  }
  .content-rte-settings{
    font-family: "Circular Std Book";
    font-size: 12px;
    line-height: 21px;
    letter-spacing: 0.5px;
    color: #000;
    @media (min-width: 992px) {
      width: 465px;
      font-size: 13px;
      line-height: 21px;
    }
	  a{
      color: #000;
	  }
  }
  .block-image-complete{
    padding: 0px;
    @media (min-width: 992px) {
      padding: 0px 15px;
    }
    img{
      width: 100% !important;
      padding-bottom: 104px;
      @media (min-width: 992px) {
        padding-bottom: 245px;
      }
    }
  }
	.articulos-relacionados-content{
		.box-news{
			.title-relacionados{
        font-family: "Raleway-Medium";
        font-size: 16px;
        line-height: 20px;
				letter-spacing: 0.8px;
        text-transform: uppercase;
        margin-bottom: 70px;
        @media (min-width: 992px) {
          font-size: 20px;
          line-height: 25px;
        }
			}
			.slider-more-article{
				.box-blog-item{
					.article__grid-image{
	           img{
	             @media (min-width: 992px) {
	               object-fit: cover;
	               object-position: center;
	               height: 400px;
	             }
	           }
					}
					.date-title-relacionados{
            margin-bottom: 30px;
            @media (min-width: 992px) {
              margin-bottom: 15px;
            }
           a{
             font-family: "Raleway";
             font-size: 18px;
             line-height: 22px;
             color: #000;
             text-decoration: none;
             @media (min-width: 992px) {
               font-size: 20px;
               line-height: 25px;
             }
           }
					}
					.date-box-relacionados{
            font-family: "Raleway-Medium";
            color: #A2A2A2;
            text-transform: uppercase;
            font-size: 12px;
            line-height: 14px;
            margin-bottom: 40px;
            @media (min-width: 992px) {
              margin-bottom: 98px;
            }
						a{
              text-decoration: underline;
              color: #717171;
              text-transform: uppercase;
              font-size: 12px;
              line-height: 14px;
						}
					}
				}
			}
		}
	}
	.content-return-blog{
    margin-bottom: 60px;
    @media (min-width: 992px) {
      margin-bottom: 70px;
    }
		.content-button{
			a{
        font-family: "Raleway-Medium";
        color: #000;
        font-size: 13px;
        line-height: 15px;
        text-decoration: none;
				letter-spacing: 2px;
				span{
          border-bottom: 1px solid;
				}
			}
		}
	}
}
