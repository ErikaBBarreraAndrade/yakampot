.somos-agua{
	.banner-video-general{
		.slide{
			.slide__content{
				top: 50%;
        @media (min-width: 1280px) {
          top: 60%;
        }
        @media (min-width: 1800px) {
          top: 50%;
        }
        .top-title{
          font-family: 'Minion semibold italic';
          font-size: 18px;
          font-weight: bold;
          line-height: 26px;
        }
        .title{
          font-family: 'Minion Regular';
          font-size: 18px;
          line-height: 23px;
          letter-spacing: 3px;
        }
				.image-between{
          @media (min-width: 992px) {
            width: 60px;
          }
          @media (min-width: 1200px) {
            width: auto;
          }
				}
			}
		}
	}
	.section-rezos-texto-boton{
		.section-content{
      padding: 50px 0;
      .rte-settings{
        font-family: "Circular Std Book";
        font-size: 12px;
        line-height: 20px;
        letter-spacing: 0.5px;
        margin: auto;
        width: 320px;
        @media (min-width: 576px) {
          width: 520px;
        }
        @media (min-width: 992px) {
          font-size: 13px;
          line-height: 20px;
          width: 560px;
        }
      }
			.title{
        font-family: "Raleway-Medium";
        text-transform: uppercase;
        font-size: 14px;
        line-height: 16px;
				letter-spacing: 2px;
        margin-top: 40px;
        margin-bottom: 0;
        @media (min-width: 992px) {
          margin-top: 60px;
          letter-spacing: 3px;
        }
			}
			.content-button{
				a{
          font-family: "Raleway-Light";
          font-size: 10px;
          line-height: 11px;
          margin-top: 50px;
          @media (min-width: 992px) {
            font-size: 13px;
            line-height: 15px;
          }
					&:hover{
            background: transparent !important;
					}
					span{
            border-bottom: 1px solid #000;
					}
				}
			}
		}
	}
  .section-rezos-prefacio{
    padding: 90px 0;
    @media (min-width: 992px) {
      padding: 105px 0;
    }
    .title{
      font-family: "Raleway-Medium";
      font-size: 14px;
      line-height: 16px;
      letter-spacing: 3px;
      margin-bottom: 40px;
      @media (min-width: 992px) {
        font-size: 15px;
        line-height: 18px;
        letter-spacing: 3px;
      }
    }
	  .rte-settings{
      font-family: "Circular Std Book";
		  letter-spacing: 0.5px;
      font-size: 12px;
      line-height: 20px;
      margin: auto;
      width: 319px;
      @media (min-width: 576px) {
        width: 419px;
      }
      @media (min-width: 992px) {
        font-size: 13px;
        line-height: 20px;
        width: 581px;
      }
	  }
  }
  .section-rezos-imagen-completa{
    .content-button{
      a{
        font-family: "Raleway-Medium";
        text-transform: uppercase;
        color: #9A9A9A;
        font-size: 11px;
        line-height: 13px;
        @media (min-width: 992px) {
          font-size: 12px;
          line-height: 14px;
        }
        &:hover{
          background: transparent !important;
        }
        span{
          border-bottom: 1px solid #9A9A9A;
        }
      }
    }
  }
	.section-rezos-capitulo{
		.heading{
      font-family: "Raleway-Medium";
      color: #000;
      font-size: 10px;
      line-height: 11px;
			letter-spacing: 2px;
      @media (min-width: 992px) {
	      letter-spacing: 3px;
        font-size: 14px;
        line-height: 16px;
      }
		}
		.title{
      font-family: "Raleway-Medium";
      font-size: 15px;
      line-height: 18px;
			letter-spacing: 2px;
      margin: 20px auto;
      width: 215px;
      @media (min-width: 576px) {
        width: auto;
      }
      @media (min-width: 992px) {
        letter-spacing: 2px;
        font-size: 20px;
        line-height: 24px;
        margin: 40px 0;
      }
		}
		.description-header{
      font-family: "Circular Std Book";
      letter-spacing: 0.5px;
      font-size: 12px;
      line-height: 20px;
      margin: 0 auto 60px;
      width: 306px;
      @media (min-width: 576px) {
        width: 510px;
      }
      @media (min-width: 992px) {
        margin: 0 auto 120px;
        width: 560px;
        font-size: 13px;
        line-height: 20px;
      }
		}
		.content-infografia{
			.description{
        font-family: "Circular Std Book";
        font-size: 12px;
        line-height: 18px;
        margin: 30px auto 0px;
        width: 306px;
        color: #9B9B9B;
        @media (min-width: 576px) {
        }
        @media (min-width: 992px) {
          width: 306px;
        }
			}
		}
		.second-row-grid{
      @media (min-width: 992px) {
        margin-top: 135px;
      }
		}
		.content-button{
			a{
        font-family: "Raleway-Medium";
        color: #9A9A9A;
        font-size: 11px;
        line-height: 13px;
        padding: 2px !important;
        @media (min-width: 992px) {
          font-size: 12px;
          line-height: 14px;
        }
				span{
          border-bottom: 1px solid #9A9A9A;
				}
				&:hover{
          background: transparent !important;
				}
				&:after{
					content: none !important;
				}
			}
		}
    &.section-rezos-capitulo-1{
      padding: 50px 0;
      @media (min-width: 992px) {
        padding: 85px 0;
      }
	    .section-infografia-img{
        @media (min-width: 992px) {
          margin-bottom: 30px;
        }
	    }
	    .second-grid-products{
        margin-top: 70px;
        @media (min-width: 992px) {
          margin-top: 140px;
        }
		    .content-image:first-child{
          @media (min-width: 576px) {
            padding-right: 0 !important;
          }
			    .content-button{
            display: none !important;
            @media (min-width: 576px) {
              display: block !important;
            }
			    }
		    }
        .content-image:last-child{
          @media (min-width: 576px) {
            padding-left: 0 !important;
          }
        }
	    }
    }
    &.section-rezos-capitulo-3 {
      padding: 50px 0;
      @media (min-width: 992px) {
        padding: 85px 0;
      }
	    .content-image-product-alone{
		    position: relative;
        margin-top: 65px;
        @media (min-width: 992px) {
	        margin-top: 135px;
        }
	    }
	    .second-grid-products{
        padding-bottom: 70px;
        @media (min-width: 992px) {
          padding-bottom: 90px;
        }
	    }
	    .content-image:first-child{
		    .content-box-btn{
          order: -1!important;
          @media (min-width: 576px) {
            order: 6!important;
          }
			    .content-button{
            margin-bottom: 0 !important;
            @media (min-width: 576px) {
              margin-bottom: 15px !important;
            }
			    }
		    }
	    }
    }
	}
  .section-rezos-banner-hero{
    padding-top: 90px;
    @media (min-width: 992px) {
      padding-top: 140px;
    }
    .section-content{
      min-height: 576px;
      @media (min-width: 576px) {
        min-height: 500px;
      }
      @media (min-width: 1280px) {
        min-height: 616px;
      }
      @media (min-width: 1500px) {
        min-height: 716px;
      }
	    .content-description{
        padding: 35px 15px;
        @media (min-width: 992px) {
          padding: 50px;
        }
        .rte-setting{
          color: #9B9B9B;
          font-size: 10px;
          line-height: 14px;
          font-family: "Circular Std Book";
          margin-top: 15px;
          @media (min-width: 576px) {
            width: 300px;
          }
          @media (min-width: 992px) {
            font-size: 12px;
            line-height: 18px;
          }
          @media (min-width: 1280px) {
            width: 400px;
          }
        }
	    }
    }
    .content-button{
      a{
        font-family: "Raleway-Medium";
        color: #9A9A9A;
        font-size: 11px;
        line-height: 13px;
        padding: 2px !important;
        @media (min-width: 992px) {
          font-size: 12px;
          line-height: 14px;
        }
        span{
          border-bottom: 1px solid #9A9A9A;
        }
        &:hover{
          background: transparent !important;
        }
        &:after{
          content: none !important;
        }
      }
    }
  }
  .seccion-productos-coleccion{
    .box-product-fnws{
      .content-box-products{
        .productTabsNav{
          border-top: 1px solid #B7B7B7;
          width: 91.66666667%;
          @media (min-width: 992px) {
            width: 83.33333333%;
          }
          .title{
            padding-top: 70px;
            font-family: "Raleway-Medium";
            font-size: 14px;
            line-height: 16px;
            letter-spacing: 3px;
            margin-bottom: 20px;
            text-transform: uppercase;
            @media (min-width: 992px) {
              font-size: 14px;
              line-height: 16px;
              letter-spacing: 3px;
            }
          }
          .content-tabs-products{
            .nav{
              margin: 0 !important;
              border: none !important;
              padding-bottom: 100px;
              .nav-item{
                button{
                  padding: 0 !important;
                  border: none !important;
                  font-family: "Raleway-Medium";
                  font-size: 15px;
                  line-height: 18px;
                  letter-spacing: 2px;
                  text-transform: uppercase;
                  @media (min-width: 992px) {
                    letter-spacing: 2px;
                    font-size: 20px;
                    line-height: 24px;
                  }
                }
              }
            }
          }
          .tab-content{
            .content-product{
              @media (min-width: 576px) {
                width: 33.33%;
                padding: 0 2px;
              }
              @media (min-width: 992px) {
                width: 20%;
                padding: 0 2px;
              }
              .grid-product__title{
                font-family: 'Raleway-Semibold';
                font-size: 13px;
                line-height: 15px;
                letter-spacing: 1.5px;
                text-transform: uppercase;
                margin-top: 30px;
                @media (min-width: 992px) {
                  letter-spacing: 2px;
                  font-size: 11px;
                  line-height: 15px;
                }
                @media (min-width: 1800px) {
                  font-size: 13px;
                  line-height: 15px;
                }
              }
	            .grid-product__price{
                font-family: "Raleway-Light";
                font-size: 13px;
                line-height: 15px;
	            }
              .button-buy-product{
                display: none;
              }
            }
	          .btn{
              font-family: "Raleway-Medium";
              color: #9A9A9A;
              font-size: 11px;
              line-height: 13px;
              padding: 2px !important;
              margin: 80px 0;
              @media (min-width: 992px) {
                font-size: 12px;
                line-height: 14px;
              }
              span{
                border-bottom: 1px solid #9A9A9A;
              }
              &:hover{
                background: transparent !important;
              }
              &:after{
                content: none !important;
              }
	          }
          }
        }
      }
    }
  }
}
