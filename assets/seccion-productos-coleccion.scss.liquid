.seccion-productos-coleccion{
  padding-bottom: 45px;
	.box-product-fnws{
		.content-box-products{
			.slider-products-collection{
				.grid-product__content{
					a{
            color: #000;
            text-decoration: none;
						.grid-product__meta{
							.grid-product__title{
                font-family: 'Raleway-Semibold';
                font-size: 13px;
                line-height: 15px;
								letter-spacing: 1.5px;
              }
							.grid-product__price{
								.limoniapps-discountninja-shortcode-discounted_price{
                  margin-right: 15px;
                  .money{
                    font-family: 'Raleway-Light';
                    font-size: 13px;
                    line-height: 15px;
                    color: #000 !important;
                  }
								}
								.limoniapps-discountninja-strikethrough{
									.money{
                    font-family: 'Raleway-Light';
                    font-size: 13px;
                    line-height: 15px;
                    color: #919191 !important;
									}
								}
							}
						}
					}
          .limoniapps-discountninja-badge-inner{
            .limoniapps-discountninja-badge-inner-border{
              span{
                .limoniapps-discountninja-shortcode{
                  position: absolute;
                  top: 88%;
                  left: 17%;
                }
              }
            }
          }
				}
				.slick-dots{
					li{
            width: 10px;
            height: 10px;
						border: 0.4px solid #000000;
						border-radius: 50px;
						button{
							&::before{
								content: none !important;
							}
						}
						&.slick-active{
              background: #000;
						}
					}
				}
			}
		}
	}
