.sumate-a-la-causa-pride{
  .productos-pride{
    margin: auto;
    @media(min-width: 992px){
      width: 70%;
      margin-top: 90px;
    }
    .product-block .product-meta{
      padding: 20px 15px !important;
    }
  }
  .texto-somos-only-txt{
    .mega-title{
      font-family: 'Raleway-Semibold';
      font-size: 20px;
      line-height: 24px;
      margin: auto;
      width: 240px;
      @media(min-width: 768px){
        width: auto;
      }
      @media(min-width: 992px){
        font-size: 25px;
        line-height: 30px;
        width: auto;
      }
    }
    .rte-setting{
      margin: auto;
      width: 310px;
      margin-top:	30px !important;
      @media(min-width: 768px){
        width: auto;
      }
      @media(min-width: 992px){
        width: 640px;
      }
      p{
        font-family: 'Raleway-Light';
        letter-spacing: 0;
        @media(min-width: 992px){
          font-size: 15px;
          line-height: 18px;
        }
      }
    }
  }
}
.sumate-a-la-causa-pride{
  .slide__content{
    top: 75% !important;
  }
  .slick-slide{
    padding: 0px !important;
  }
  .banner__slider{
    .slide__content--headings{
      .top-title{
        font-family: 'Raleway-Regular';
        font-size: 14px;
        line-height: 16px;
        color: #FFF;
        margin: 0 auto;
        width: 220px;
        @media(min-width: 768px){
          font-size: 15px;
          line-height: 18px;
          width: 500px;
        }
        @media(min-width: 992px){
          font-size: 15px;
          line-height: 18px;
          width: 500px;
        }
        p{
          font-family: 'Raleway-Italic';
          font-size: 14px;
          line-height: 16px;
          color: #FFF;
          width: 160px;
          margin: 0 auto 20px;
          @media(min-width: 768px){
            font-family: 'Raleway-Regular';
            font-size: 15px;
            line-height: 18px;
            width: 100%;
            margin: 0px;
          }
        }
      }
    }
  }
  .slide__content--headings{
    h2{
      font-family: 'Raleway-Thin' !important;
      margin: 25px 0 0;
    }
  }
  .section-only-text{
    margin-top: 100px;
  }
	#shopify-section-only-text-button-2{
    .rte-setting {
	    p{
        font-family: 'Circular Std Book';
        font-size: 13px;
        line-height: 19px;
        text-transform: initial;
        letter-spacing: 0.5px;
	    }
    }
	}
}
.content-video-idx{
  position: relative;
	button{
		top: 50%!important;
	}
}
/*========================== Conoce la marca =======================*/
.conoce-la-marca{
  .slick-slide{
    padding: 0px !important;
  }
  .content-txt{
    padding: 50px 30px 70px;
    @media(min-width: 992px){
      padding: 90px 0;
    }
    .title{
      font-family: 'Raleway-Medium';
      text-align: left !important;
      font-size: 15px;
      line-height: 22px;
      color: #000;
      width: 205px;
      letter-spacing: 1px;
      text-transform: uppercase;
      @media(min-width: 992px){
	      letter-spacing: 3px;
        text-align: center !important;
        font-size: 22px;
        line-height: 30px;
        margin-bottom: 45px;
        width: auto;
      }
    }
    .description{
      font-family: 'Circular Std Book';
      margin: auto;
      margin-top: 60px;
      letter-spacing: 0.5px;
      @media(min-width: 768px){
      }
      @media(min-width: 992px){
        width: 622px;
        margin-top: 0;
        margin-bottom: 5px;
      }
      p{
        color: #000;
        text-align: left !important;
        font-size: 13px;
        line-height: 15px;
        @media(min-width: 992px){
          font-size: 13px;
          line-height: 19px;
          text-align: center !important;
        }
      }
    }
    .content-button{
      a{
        font-family: 'Raleway-Light';
        background: transparent !important;
        color: #000000;
        @media(min-width: 768px){
        }
        @media(min-width: 992px){
          font-size: 13px;
          line-height: 15px;
        }
        span{
          border-bottom: 1px solid #000;
        }
      }
    }
  }
  .seccion-img-gallery{
    .content-image-gallery{
      margin: auto;
      @media(min-width: 992px){
        width: 70%;
      }
      .content-img{
        padding: 0;
      }
    }
    .content-description{
      padding: 70px 30px 0;
      @media(min-width: 992px){
        padding-top: 70px;
      }
      .description{
        font-family: 'Circular Std Book';
        margin: auto;
        letter-spacing: 0.5px;
        @media(min-width: 768px){
        }
        @media(min-width: 992px){
          width: 610px;
        }
        p{
	        letter-spacing: 1px;
          color: #000;
          text-align: left !important;
          font-size: 13px;
          line-height: 19px;
          @media(min-width: 992px){
            text-align: center  !important;
          }
        }
      }
    }
  }
  .banners-end{
    padding-top: 90px;
    .content-img{
      padding: 0;
      &:last-child{
        margin-top: -6px;
        @media(min-width: 992px){
          margin-top: 0;
        }
      }
    }
  }
  .mega-subtitle{
	  letter-spacing: 1px !important;
  }
}
/*========================== Conoce la marca =======================*/