.section-text-showroom-buttons{
  a{
    text-decoration: none;
  }
	.content-global{
    padding: 60px 0;
		.content-description{
      font-family: 'Circular Std Book';
      color: #000;
      font-size: 13px;
      line-height: 20px;
      width: 90%;
      text-align: center;
      @media (min-width: 576px) {
        width: 430px;
      }
			strong{
        font-family: 'Circular Std Bold';
        font-weight: normal;
      }
		}
		.content-title{
      font-family: 'Raleway';
      color: #000;
      font-size: 18px;
      line-height: 21px;
      text-align: center;
      margin-top: 40px;
      margin-bottom: 25px;
			letter-spacing: 2px;
      @media (min-width: 576px) {
        font-size: 25px;
        line-height: 30px;
        margin-bottom: 55px;
      }
		}
		.content-box-buttons{
      padding: 0;
			@media (min-width: 576px) {
				padding: 0 15px;
      }
		}
		.content-button{
      font-family: 'Raleway-Light';
      background: #F1F1F1;
      width: 100%;
			position: relative;
      padding: 25px;
      text-transform: uppercase;
      color: #030202;
      font-size: 10px;
      line-height: 11px;
			letter-spacing: 2px;
			@media (min-width: 576px) {
        font-size: 13px;
        line-height: 15px;
        width: 455px;
      }
			svg{
				position: absolute;
        right: 25px;
			}
			a{
        color: #030202;
        text-decoration: none;
			}
			&.email-toggle{
        margin-top: 6px;
				cursor: pointer;
        @media (min-width: 576px) {
          margin-top: 30px;
        }
			}
		}
		.content-form{
      margin-top: 50px;
      width: 90%;
      @media (min-width: 576px) {
        width: 70%;
      }
      @media (min-width: 992px) {
        width: 40%;
      }
		}
	}
}
