<div class="container-fluid">
	<div class="row  justify-content-center section-content" style="background: {{ section.settings.bg_color_cap }};">
		<div class="col-11 col-md-10 col-lg-9">
			<div class="row">
				<div class="col-12 text-center">
					{% if section.settings.heading != blank %}
						<p class="heading text-uppercase">
							{{ section.settings.heading }}
						</p>
					{% endif %}
					{% if section.settings.title != blank %}
						<p class="title text-uppercase">
							{{ section.settings.title }}
						</p>
					{% endif %}
					{% if section.settings.description != blank %}
						<div class="description-header">
							{{ section.settings.description }}
						</div>
					{% endif %}
				</div>
				<div class="col-12">
					<div class="row">
						{% if section.settings.image_product != blank %}
						<div class="col-12 col-sm-5 col-md-5 col-lg-4">
							<img class="img-fluid lazyload"
							     data-src="{{ section.settings.image_product | img_url:"master" }}"
							     data-widths="[180, 360, 540, 720, 900, 1080]"
							     data-aspectratio="{{ preview_image.aspect_ratio }}"
							     data-sizes="auto"
							     alt="{{ preview_image.alt | escape }}">
							{% if section.settings.btn_url != blank %}
								<p class="content-button text-center text-sm-end">
									<a href="{{ section.settings.btn_url }}" class="btn p-0">
										<span>
											{{ section.settings.btn_label }}
										</span>
									</a>
								</p>
							{% endif %}
						</div>
						{% endif %}
						{% if section.settings.image_infografia != blank %}
						<div class="col-12 col-sm-7 col-md-7 col-lg-8 text-end mt-auto pe-0 section-infografia-img">
							<img class="img-fluid lazyload d-none d-lg-block ms-auto"
							     data-src="{{ section.settings.image_infografia | img_url:"master" }}"
							     alt="{{ preview_image.alt | escape }}">
							<img class="img-fluid lazyload d-block d-lg-none ms-auto"
							     data-src="{{ section.settings.image_infografia_mobile | img_url:"master" }}"
							     alt="{{ preview_image.alt | escape }}">
						</div>
						{% endif %}
					</div>
				</div>
				{% if section.settings.enable_second %}
					<div class="col-12 second-grid-products">
						<div class="row">
							<div class="col-12 col-sm-11 col-lg-11">
								<div class="row">
									{%- for block in section.blocks -%}
										{% if block.settings.product_2_cap_1 != blank %}
											<div class="col-12 col-sm-6 col-lg-6 content-image">
												<img class="img-fluid lazyload"
												     data-src="{{ block.settings.product_2_cap_1 | img_url:"master" }}"
												     data-widths="[180, 360, 540, 720, 900, 1080]"
												     data-aspectratio="{{ preview_image.aspect_ratio }}"
												     data-sizes="auto"
												     alt="{{ preview_image.alt | escape }}">
												{% if block.settings.btn_url_cap_1 != blank %}
													<p class="content-button text-center text-sm-end">
														<a href="{{ block.settings.btn_url_cap_1 }}" class="btn p-0">
										<span>
											{{ block.settings.btn_label_cap_1 }}
										</span>
														</a>
													</p>
												{% endif %}
											</div>
										{% endif %}
									{%- endfor -%}
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
