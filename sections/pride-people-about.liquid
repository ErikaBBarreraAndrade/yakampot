<div class="row section-products" style="{{ section.settings.custom_space }};" >
	<div class="col-12">
		<div class="row justify-content-center">
			<div class="col-12 col-sm-6 col-lg content-image-people mb-3 mb-lg-0 ps-lg-0 pe-lg-4">
				{% if section.settings.image != blank %}
					<a data-src=" {{ section.settings.image| img_url: 'master'}}" data-fancybox >
						<img class="img-fluid lazyload"
						     data-src="{{section.settings.image| img_url: 'master'  }}"
						     data-widths="[180, 360, 540, 720, 900, 1080]"
						     data-aspectratio="{{ preview_image.aspect_ratio }}"
						     data-sizes="auto"
						     alt="{{ preview_image.alt | escape }}">
					</a>
				{% endif %}
			</div>
			<div class="col-12 col-sm-6 col-lg content-image-people mb-3 mb-lg-0 ps-lg-4 pe-lg-4">
				{% if section.settings.image_1 != blank %}
					<a data-src=" {{ section.settings.image_1| img_url: 'master'}}" data-fancybox>
						<img class="img-fluid lazyload"
						     data-src="{{section.settings.image_1 | img_url: 'master'  }}"
						     data-widths="[180, 360, 540, 720, 900, 1080]"
						     data-aspectratio="{{ preview_image.aspect_ratio }}"
						     data-sizes="auto"
						     alt="{{ preview_image.alt | escape }}">
					</a>
				{% endif %}
			</div>
			<div class="col-12 col-sm-8 col-lg-5 content-image-people mb-3 mb-lg-0 pe-lg-0 ps-lg-4">
				{% if section.settings.image_2 != blank %}
					<a data-src=" {{ section.settings.image_2| img_url: 'master'}}" data-fancybox>
						<img class="img-fluid lazyload"
						     data-src="{{section.settings.image_2 | img_url: 'master'  }}"
						     data-widths="[180, 360, 540, 720, 900, 1080]"
						     data-aspectratio="{{ preview_image.aspect_ratio }}"
						     data-sizes="auto"
						     alt="{{ preview_image.alt | escape }}">
					</a>
				{% endif %}
			</div>
		</div>
		<div class="row box-brand justify-content-center">
			<div class="col-12 col-lg-10">
				<div class="box-brand">
					<div class="row {% unless section.blocks.size == 5 %}{% endunless %} grid--flush-bottom">
						{%- assign grid_item_width = 'col-12 text-center col-md-3' -%}
						{%- assign image_size = '345x' -%}
						{% case section.blocks.size %}
							{% when 1 %}
								{%- assign grid_item_width = 'col-12 text-center col-md-12' -%}
								{%- assign image_size = '530x' -%}
							{% when 2 %}
								{%- assign grid_item_width = 'col-12 text-center col-md-3' -%}
								{%- assign image_size = '530x' -%}
							{% when 4 %}
								{%- assign grid_item_width = 'col-12 text-center col-md-3' -%}
								{%- assign image_size = '530x' -%}
						{% endcase %}
						{% for block in section.blocks %}
							{% if section.blocks.size == 5 and forloop.index < 3 %}
								{%- assign column_width = 'col-12 text-center col-md-3' -%}
							{% else %}
								{%- assign column_width = grid_item_width -%}
							{% endif %}
							<div class="{{ column_width }} text-{{ section.settings.align_text }}" {{ block.shopify_attributes }}>
								{% if block.settings.enable_image %}
									{% if block.settings.image != blank %}
										{{ block.settings.image | img_url: 'master' | img_tag: 'feature-row__image' }}
									{% else %}
										{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
									{% endif %}
								{% endif %}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
{
"name": "Pride people",
"class": "pride-people container-fluid",
"settings": [
{
"type": "textarea",
"id": "custom_space",
"label": "Css Style Section",
"default":"padding-top:100px;padding-bottom:100px"
},

{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "image_picker",
"id": "image_1",
"label": "Image"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Image"
},
{
"type": "select",
"id": "align_text",
"label": "Text alignment",
"default": "left",
"options": [
{
"value": "left",
"label": "Left"
},
{
"value": "center",
"label": "Centered"
}
]
}
],
"blocks": [
{
"type": "text_block",
"name": "Column",
"settings": [
{
"type": "checkbox",
"id": "enable_image",
"label": "Show image",
"default": true
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
}
]
}
],
"presets": [
{
"name": "Pride people",
"category": "Image",
"blocks": [
{
"type": "text_block"
},
{
"type": "text_block"
},
{
"type": "text_block"
}
]
}
]
}
{% endschema %}

