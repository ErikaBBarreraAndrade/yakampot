<div class="block-section section-content-description-parallax">
	<div class="block_content {{set-box}} container-fluid">
		<div class="row {% unless section.blocks.size == 5 %}{% endunless %} grid--flush-bottom">
			{%- assign grid_item_width = 'col-12 col-sm-4 col-md-4' -%}
			{%- assign image_size = '345x' -%}
			{% case section.blocks.size %}
				{% when 1 %}
					{%- assign grid_item_width = 'col-12' -%}
					{%- assign image_size = '530x' -%}
				{% when 2 %}
					{%- assign grid_item_width = 'col-12 col-md-6' -%}
					{%- assign image_size = '530x' -%}
				{% when 4 %}
					{%- assign grid_item_width = 'col-12 col-md-3' -%}
					{%- assign image_size = '530x' -%}
			{% endcase %}
			{% for block in section.blocks %}
				{% if section.blocks.size == 5 and forloop.index < 3 %}
					{%- assign column_width = 'col-12 col-md-6' -%}
				{% else %}
					{%- assign column_width = grid_item_width -%}
				{% endif %}
				<div class="{{ column_width }} content-img  text-{{ section.settings.align_text }}" {{ block.shopify_attributes }}>
					{% if block.settings.image != blank %}
						<div class="d-none d-lg-block"> 
							<img class="img-fluid w-100 lazyload"
							     data-src="{{ block.settings.image | img_url: 'master' }}"
							     alt="{{ preview_image.alt | escape }}">
						</div>
						<div class="d-block d-lg-none">
							<img class="img-fluid w-100 lazyload"
							     data-src="{{ block.settings.image_mobile | img_url: 'master' }}"
							     alt="{{ preview_image.alt | escape }}">
						</div>
					{% else %}
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>

