<div class="block-section">
	<div class="block_content container-fluid">
		<div class="row">
			<div class="col-12">
				{% if section.settings.title != blank %}
					<div class="section-header text-center {{ title_style }} {{ size_title }}">
						<h2><span>{{ section.settings.title }}</span></h2>
					</div>
				{% endif %}
			</div>
			<div class="col-12">
				{% if section.settings.text != blank %}
					<div class="rte-setting">{{ section.settings.text }}</div>
				{% endif %}
			</div>
			{% if section.settings.button_label != blank and section.settings.button_link != blank %}
				<div class="col-12 text-center">
					<a href="{{ section.settings.button_link }}" class="btn">
						<span>{{ section.settings.button_label }}</span>
					</a>
				</div>
			{% endif %}
		</div>
	</div>
</div>

{% schema %}
{
"name": "Text about",
"class": "content-section-text-about",
"settings": [
{
"type": "image_picker",
"id": "bg_section",
"label": "Background Image"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Text columns with images"
},
{
"type": "richtext",
"id": "text",
"label": "Text",
"default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
},
{
"type": "text",
"id": "button_label",
"label": "Button label"
},
{
"type": "url",
"id": "button_link",
"label": "Button link"
}
],

"presets": [
{
"name": "Text about",
"category": "Text"
}
]
}
{% endschema %}
