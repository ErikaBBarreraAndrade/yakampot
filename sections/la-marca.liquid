<div class="block-section section-aboutus" {%- if section.settings.custom_space != blank -%} style="{{ section.settings.custom_space }};background-color: {{section.settings.bg_section }}" {%- endif -%}>
	<div class="container-fluid">
		<div class="row">
			<div class="{{ column_width }} text-{{ section.settings.align_text }}" {{ block.shopify_attributes }}>
				<div class="col-12">
					<div class="row">
						<div class="col-12 col-sm-6 col-md-6">
							{{ section.settings.image | img_url: 'master' | img_tag: 'feature-row__image' }}
						</div>
						<div class="col-12 col-sm-6 col-md-4 offset-md-2">
							<div class="box-text">
								{% if section.settings.title != blank %}
									<h3 class="h1 title">{{ section.settings.title }}</h3>
								{% endif %}
								{% if section.settings.text != blank %}
									<div class="rte-setting">{{ section.settings.text }}</div>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="row content-image-alone">
						<div class="col-12 col-sm-7 col-md-4 offset-md-4">
							{{ section.settings.image_2 | img_url: 'master' | img_tag: 'feature-row__image' }}
						</div>
					</div>
					<div class="row">
						<div class="col-12 col-sm-5 offset-sm-1 col-md-4 offset-md-1">
							<div class="box-text">
								{% if section.settings.title_nosotros != blank %}
									<h3 class="h1 title">{{ section.settings.title_nosotros }}</h3>
								{% endif %}
								{% if section.settings.text_nosotros != blank %}
									<div class="rte-setting">{{ section.settings.text_nosotros }}</div>
								{% endif %}
							</div>
						</div>
						<div class="col-12 col-sm-6 col-md-6 col-md-offset-1 image-end">
							{{ section.settings.image_3 | img_url: 'master' | img_tag: 'feature-row__image' }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% schema %}
{
"name": "Seccion Nosotros",
"settings": [
{
"type": "textarea",
"id": "custom_space",
"label": "Css Style Section",
"default":"padding-top:0px;padding-bottom:0px"
},
{
"type":      "radio",
"id":        "set_box",
"label":     "Set Layout Section",
"options": [
{ "value": "box-container", "label": "Box Container" },
{ "value": "box-full", "label": "Box Full" },
{ "value": "none", "label": "None" }
],
"default":   "box-full",
"info":      "Set Layout Section"
},
{
"type": "color",
"id": "bg_section",
"label": "Background color",
"default": "#ffffff"
},
{
"type": "image_picker",
"id": "image",
"label": "Primera Imagen"
},
{
"type": "text",
"id": "title",
"label": "Titulo",
"default": "Add a title or tagline"
},

{
"type": "richtext",
"id": "text",
"label": "Texto Manifiesto",
"default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Segunda Imagen"
},
{
"type": "image_picker",
"id": "image_3",
"label": "Tercera Imagen"
},
{
"type": "text",
"id": "title_nosotros",
"label": "Titulo",
"default": "Add a title or tagline"
},
{
"type": "richtext",
"id": "text_nosotros",
"label": "Texto Nosotros",
"default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
},

{
"type": "select",
"id": "align_text",
"label": "Text alignment",
"default": "left",
"options": [
{
"value": "left",
"label": "Left"
},
{
"value": "center",
"label": "Centered"
}
]
}
],
"presets": [
{
"name": "Seccion Nosotros",
"category": "Text"
}
]
}
{% endschema %}
