<div class="block_content container-fluid">
	<div class="col-12">
		<div class="row {% unless section.blocks.size == 5 %}{% endunless %} content-image-people p-0">
			{%- assign grid_item_width = 'col-12 col-sm-4 col-md-4' -%}
			{%- assign image_size = '345x' -%}
			{% case section.blocks.size %}
				{% when 1 %}
					{%- assign grid_item_width = 'col-12 col-md-12' -%}
					{%- assign image_size = '530x' -%}
				{% when 2 %}
					{%- assign grid_item_width = 'col-12 col-sm-6 col-md-6' -%}
					{%- assign image_size = '530x' -%}
				{% when 4 %}
					{%- assign grid_item_width = 'col-12 col-sm-3 col-md-3' -%}
					{%- assign image_size = '530x' -%}
			{% endcase %}
			{% for block in section.blocks %}
				{% if section.blocks.size == 5 and forloop.index < 3 %}
					{%- assign column_width = 'col-12 col-sm-6 col-md-6' -%}
				{% else %}
					{%- assign column_width = grid_item_width -%}
				{% endif %}
				<div class="{{ column_width }} section-box-image">
					{% if block.settings.image != blank %}
						<img class="w-100 img-fluid lazyload"
						     data-src="{{ block.settings.image | img_url: 'master' }}"
						     data-aspectratio="{{ preview_image.aspect_ratio }}"
						     alt="{{ preview_image.alt | escape }}">
					{% else %}
						{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>

{% schema %}
{
"name": "Section about images",
"class": "section-about-images",
"settings": [
],
"blocks": [
{
"type": "text_block",
"name": "Column",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
}
]
}
],
"presets": [
{
"name": "Section about images",
"category": "Text",
"blocks": [
{
"type": "text_block"
},
{
"type": "text_block"
}
]
}
]
}
{% endschema %}
